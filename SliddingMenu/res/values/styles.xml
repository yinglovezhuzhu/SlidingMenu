<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 公共部分 -->
    <style name="SingleLine">
        <item name="android:singleLine">true</item>
    </style>
    
    <!-- 菜单栏 -->
    <style name="MenuTitleText" parent="@style/SingleLine">
        <item name="android:paddingLeft">@dimen/menu_title_text_pading_left</item>
        <item name="android:textColor">@color/white_alpha_de</item>
        <item name="android:textSize">@dimen/menu_title_text_size</item>
    </style>

    <style name="MenuText" parent="@style/SingleLine">
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.3</item>
        <item name="android:shadowColor">@color/black</item>
    </style>
</resources>
