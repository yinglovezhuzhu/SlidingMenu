<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_foot_view_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="@dimen/foot_load_padding"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false" >
    <ProgressBar 
        android:id="@+id/pb_foot_load_progress"
        android:layout_width="@dimen/foot_load_progress_size"
        android:layout_height="@dimen/foot_load_progress_size"/>
	<TextView 
	    style="@style/FootLoadMsgTv"
	    android:id="@+id/tv_foot_load_msg"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/foot_load_text_progress_marging" />
</LinearLayout>
