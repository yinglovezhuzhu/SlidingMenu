<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/app_item_padding">

    <ImageView
        android:id="@+id/iv_item_app_icon"
        android:layout_width="@dimen/app_item_img_size"
        android:layout_height="@dimen/app_item_img_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/iv_item_app_icon"
        android:layout_toLeftOf="@+id/btn_item_app_download"
        android:paddingLeft="@dimen/app_item_text_padding_left"
        android:paddingRight="@dimen/app_item_text_padding_right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_app_name"
            style="@style/AppListTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_item_app_summary"
            style="@style/AppListTagText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
	<Button 
	    android:id="@+id/btn_item_app_download"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:minWidth="60dip"
	    android:background="@drawable/selector_download_btn"
	    android:text="@string/download"
	    android:textColor="@color/white_alpha_de"
	    android:textSize="@dimen/app_download_btn_text_size"
	    android:focusable="false"
	    android:focusableInTouchMode="false" />
</RelativeLayout>