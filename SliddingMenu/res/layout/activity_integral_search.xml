	            <TextView
	                style="@style/IntegralSearchLabelText1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/idcard_num" />
	
	            <TextView
	                style="@style/IntegralSearchLabelText2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/tip_must_input" />
	        </LinearLayout>
	
	        <EditText
	            style="@style/IntegralSearchInputEt"
	            android:id="@+id/et_integral_search_idcard_num"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/integral_lable_input_marging"
	            android:inputType="textUri"
	            android:digits="01234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
	            tools:ignore="TextFields" />
