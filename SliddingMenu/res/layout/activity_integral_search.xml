	    android:scrollbars="none"
	    android:fadingEdge="none"
	    android:padding="@dimen/integral_body_marging" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/grass_bg2"
	        android:gravity="center_horizontal"
	        android:orientation="vertical"
	        android:padding="@dimen/integral_body_padding" >
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/integral_top_marging"
	            android:orientation="horizontal" >
	
	            <TextView
	                style="@style/IntegralSearchLabelText1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/vip_num" />
	
	            <TextView
	                style="@style/IntegralSearchLabelText2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/tip_must_input" />
	        </LinearLayout>
	        <EditText
	            style="@style/IntegralSearchInputEt"
	            android:id="@+id/et_integral_search_vip_num"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/integral_lable_input_marging"
	            android:inputType="number" />
