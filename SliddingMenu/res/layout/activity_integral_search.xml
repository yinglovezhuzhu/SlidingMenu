	            style="@style/IntegralSearchInputEt"
	            android:id="@+id/btn_integral_search_year"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/integral_lable_input_marging"
