	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/integral_body_padding"
	            android:orientation="horizontal" >
	
	            <TextView
	                style="@style/IntegralSearchLabelText1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/year" />
	
	            <TextView
	                style="@style/IntegralSearchLabelText2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/tip_must_input" />
	        </LinearLayout>
