<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg2"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_club_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/club_log_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/selector_club_logo"
        tools:ignore="ContentDescription"
        android:clickable="true" />

    <TextView
        style="@style/ClubSecondTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_gz_hengda" />
	
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
	    	android:fadingEdge="none"
            android:background="@drawable/slidingmenu_bg">
            <LinearLayout 
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ibtn_club_item_introduction"
                        style="@style/ClubItemLayout"
                        android:src="@drawable/selector_club_introduction"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/divider_vertical"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/ibtn_club_item_history"
                        style="@style/ClubItemLayout"
                        android:src="@drawable/selector_club_history"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/divider_vertical"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/ibtn_club_item_home"
                        style="@style/ClubItemLayout"
                        android:src="@drawable/selector_club_home"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/divider_horizontal"
                    tools:ignore="ContentDescription" />

                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ibtn_club_item_clothes"
                        style="@style/ClubItemLayout"
                        android:src="@drawable/selector_club_clothes"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/divider_vertical"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/ibtn_club_item_mascot"
                        style="@style/ClubItemLayout"
                        android:src="@drawable/selector_club_mascot"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/divider_vertical"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/ibtn_club_item_record"
                        style="@style/ClubItemLayout"
                        android:src="@drawable/selector_club_record"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/divider_horizontal"
                    tools:ignore="ContentDescription" />
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ibtn_club_item_notebook"
                        style="@style/ClubItemLayout"
                        android:src="@drawable/selector_club_notebook"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/divider_vertical"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/ibtn_club_item_cup"
                        style="@style/ClubItemLayout"
                        android:src="@drawable/selector_club_cup"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/divider_vertical"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/ibtn_club_item_transfer"
                        style="@style/ClubItemLayout"
                        android:src="@drawable/selector_club_transfer"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/divider_horizontal"
                    tools:ignore="ContentDescription" />
               

            </LinearLayout>
        </ScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_shadow_size"
            android:background="@drawable/shape_shadow_top_title"
            android:layout_gravity="top" />
    </FrameLayout>
</LinearLayout>